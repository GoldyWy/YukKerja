<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:padding="10dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalbis Institute"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:id="@+id/tvInstitusiItem"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvInstitusiItem"
        android:text="2020"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:id="@+id/tvWisudaItem"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvWisudaItem"
        android:text="Sarjana (S1) jurusan Teknik Informatika"
        android:id="@+id/tvTingkatJurusanItem"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTingkatJurusanItem"
        android:text="3.60 / 4.00"
        android:id="@+id/tvNilaiItem"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_delete_abu_24dp"
        android:id="@+id/ivHapusPendidikan"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="5dp"
        android:layout_toStartOf="@id/ivHapusPendidikan"
        android:background="@drawable/ic_edit_abu_24dp"
        android:id="@+id/ivUbahPendidikan"
        />


</RelativeLayout>