<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailPendaftar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:paddingVertical="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bluegradientprofile"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_marginVertical="15dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:id="@+id/ivPendaftar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="Foto"
                app:srcCompat="@drawable/fotoprofil" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvNamaPendaftar"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/colorWhite"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:weightSum="2"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorSecond"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvJkPendaftar"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorMain"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvStatusPendaftar"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <LinearLayout
                android:paddingHorizontal="10dp"
                android:paddingVertical="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_marginVertical="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginVertical="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/colorMain"
                        />

                    <TextView
                        android:layout_marginVertical="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvEmailPendaftar"
                        android:textSize="16dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginVertical="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginVertical="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Telepon"
                        android:textColor="@color/colorMain"
                        />

                    <TextView
                        android:layout_marginVertical="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvTelpPendaftar"
                        android:textSize="16dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginVertical="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginVertical="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alamat"
                        android:textColor="@color/colorMain"
                        />

                    <TextView
                        android:layout_marginVertical="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvAlamatPendaftar"
                        android:textSize="16dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginVertical="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginVertical="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Deskripsi Diri"
                        android:textColor="@color/colorMain"
                        />

                    <TextView
                        android:layout_marginVertical="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvDeskPendaftar"
                        android:textSize="16dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginVertical="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginVertical="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Keahlian"
                        android:textColor="@color/colorMain"
                        />

                    <TextView
                        android:layout_marginVertical="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvKeahlianPendaftar"
                        android:textSize="16dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginVertical="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginVertical="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Harapan Gaji"
                        android:textColor="@color/colorMain"
                        />

                    <TextView
                        android:layout_marginVertical="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvGajiPendaftar"
                        android:textSize="16dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginVertical="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginVertical="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Harapan Lokasi Kerja"
                        android:textColor="@color/colorMain"
                        />

                    <TextView
                        android:layout_marginVertical="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvLokasiPendaftar"
                        android:textSize="16dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginVertical="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >

                    <Button
                        android:paddingHorizontal="15dp"
                        android:drawableLeft="@drawable/ic_phone_putih_24dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="      Telepon         "
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/button_call"
                        android:id="@+id/btnTeleponPendaftar"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"

                        />
                    <Button
                        android:paddingHorizontal="15dp"
                        android:drawableLeft="@drawable/ic_file_download_white_24dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="      Resume         "
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/button_resume"
                        android:id="@+id/btnResumePendaftar"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        />

                </LinearLayout>




            </LinearLayout>

        </ScrollView>



    </LinearLayout>

</LinearLayout>