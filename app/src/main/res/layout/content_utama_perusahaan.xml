<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".UtamaPerusahaan"
    android:background="@color/colorAbuBackground"
    android:orientation="vertical"
    android:id="@+id/ParentRecycleView"
    tools:showIn="@layout/activity_utama_perusahaan">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bluegradient"
        >


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="-50dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="15dp"
            android:background="@drawable/whitecorner"
            >

            <TextView
                android:layout_marginHorizontal="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aktif "
                android:id="@+id/tvLowonganAktif"
                android:drawableTop="@drawable/ic_notifications_active_black_24dp"
                />

            <TextView
                android:layout_marginHorizontal="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tutup"
                android:drawableTop="@drawable/ic_highlight_off_black_24dp"
                android:id="@+id/tvLowonganTutup"
                />

            <TextView
                android:layout_marginHorizontal="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_history_black_24dp"
                android:text="Sejarah"
                android:id="@+id/tvLowonganSejarah"

                />




        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fgLowonganPerusahaan"
        android:orientation="horizontal">



    </LinearLayout>








</LinearLayout>