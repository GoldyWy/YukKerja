<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:background="@drawable/bluegradient">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/ic_logoyukkerjaputih"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="-30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="20dp"

                >
                <LinearLayout
                    android:layout_marginBottom="30dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/whitebackground"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:paddingVertical="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daftar Kandidat"
                        android:textSize="30dp"
                        android:textColor="@color/colorMain"
                        android:textStyle="bold"
                        />

                    <LinearLayout
                        android:paddingVertical="20dp"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">





                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textColor="@color/colorSecond"

                            />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:id="@+id/etEmail"
                            android:backgroundTint="@color/colorSecond"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Depan"
                            android:textColor="@color/colorSecond"

                            />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:hint="Nama Depan"
                            android:inputType="text"
                            android:id="@+id/etNamaDepan"
                            android:backgroundTint="@color/colorSecond"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Belakang"
                            android:textColor="@color/colorSecond"

                            />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:hint="Nama Belakang"
                            android:inputType="text"
                            android:id="@+id/etNamaBelakang"
                            android:backgroundTint="@color/colorSecond"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp">

                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:padding="5dp"
                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/ic_pria">
                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/rbPria"
                                        />
                                </LinearLayout>




                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:padding="5dp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/ic_wanita">
                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/rbWanita"/>

                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Telepon"
                            android:textColor="@color/colorSecond"

                            />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorSecond"
                            android:inputType="phone"
                            android:digits="0123456789+"
                            android:id="@+id/etTelepon"
                            android:hint="Telepon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Password"
                            android:textColor="@color/colorSecond"

                            />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorSecond"
                            android:inputType="textPassword"
                            android:id="@+id/etPassword"
                            android:hint="Password"/>



                    </LinearLayout>



                    <Button
                        android:paddingVertical="5dp"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Daftar"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:id="@+id/btnDaftar"
                        android:background="@drawable/buttonprimary"/>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sudah punya akun ? "/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorSecond"
                            android:text="@string/masuk"
                            android:id="@+id/tvMasuk"
                            />

                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>



        </LinearLayout>


    </ScrollView>

</LinearLayout>